# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs.

# Root file. This is the top-most EditorConfig file and stops searching for other .editorconfig files in parent directories.
root = true

# Apply settings to all files
[*]
# Indentation and spacing
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
tab_width = 2

[*.md]
trim_trailing_whitespace = false

# Apply settings to specific file types
[*.js]
# For JavaScript files, you may want to specify settings related to print width
# However, `.editorconfig` does not support `printWidth` directly, this is managed by Prettier.

[*.ts]
# Similar to JavaScript files, for TypeScript files
